                          {% for entity in entities %}
                      <div class="row">
                              <div class="col-md-4 col-sm-4">
                                  <img src="{{ asset('uploads/images/' ~ entity.rutaFoto) }}" alt="" class="img-responsive">
                              </div>
                              <div class="col-md-8 col-sm-8">
                                  <h2><a href="{{ path('noticias_show', { 'id': entity.id}) }}">{{ entity.titulo }}</a></h2>
                                  <ul class="blog-info">
                                      <li><i class="fa fa-calendar"></i> {{ entity.fecha }}</li>

                                  </ul>
                                  <p>{{ entity.descripcion | truncate(300, true) }}</p>
                                  <a class="more" href="{{ path('noticias_show', { 'id': entity.id}) }}">Leer más <i class="icon-angle-right"></i></a>
                              </div>
                      </div>
                              <hr class="blog-post-sep">
                          {% endfor %}


                  </div>
              </div>
