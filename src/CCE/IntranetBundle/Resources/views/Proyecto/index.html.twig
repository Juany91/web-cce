{%extends 'IntranetBundle:Default:intranet.html.twig'%}



  {% block contenido %}
      <div class="page-container">
          <!-- BEGIN PAGE HEADER-->
          <div class="row col-md-12">
              <div class="">
                  <!-- BEGIN PAGE TITLE & BREADCRUMB-->
                  <ul class="page-breadcrumb breadcrumb">
                      <li>
                          <i class="fa fa-home"></i>
                          <a href="{{ path('intranet_homepage') }}">
                              Intranet
                          </a>
                          <i class="fa fa-angle-right"></i>
                      </li>
                      <li>
                          <a href="{{ path('proyecto') }}">
                              Gestionar Proyecto
                          </a>
                          <i class="fa fa-angle-right"></i>
                      </li>
                      <li>
                          <a href="{{ path('proyecto') }}">
                              Lista de Proyectos
                          </a>
                      </li>

                  </ul>
                  <!-- END PAGE TITLE & BREADCRUMB-->
              </div>
          </div>
          <!-- END PAGE HEADER-->
          <!-- Begin: life time stats -->
          <div class="row col-md-4 ">
          </div>
          <div class="row col-md-6">
              <div class="portlet box green ">
                  <div class="portlet-title">
                      <div class="caption">
                          <i class="glyphicon glyphicon-user"></i>Listado de Proyectos
                      </div>
                      <div class="caption">
                          <div class="caption">


                          </div>
                      </div>
                      <div class="tools">
                          <a href="javascript:;" class="collapse">
                          </a>

                      </div>
                  </div>
                  <div class="portlet-body">

                      <div class="tab-content">
                          <div class="tab-pane active" id="overview_1">
                              <div class="table-responsive">
                                  <table class="table table-striped table-hover table-bordered">
                                      <thead>
                                      <tr>

                                          <th>Nombre</th>


                                          <th>Descripción</th>


                                          {% if is_granted('ROLE_ADMIN')  %}
                                              <th>Acciones</th>
                                          {% endif %}
                                      </tr>
                                      </thead>
                                      <tbody>
                                      {% for entity in entities %}
                                          <tr>

                                              <td>{{ entity.nombre }}</td>


                                              <td>{{ entity.descripcion }}</td>

                                              <td>
                                                  <div class="-align-justify">
                                                      <a href="{{ path('proyecto_show', { 'id': entity.id}) }}" class="btn blue">Mostrar</a>

                                                      {% if is_granted('ROLE_ADMIN')  %}
                                                          <a href="{{ path('proyecto_edit', { 'id': entity.id}) }}" class="btn yellow">Editar</a>
                                                      {% endif %}
                                                  </div>
                                              </td>
                                          </tr>

                                      {% endfor %}

                                      </tbody>
                                  </table>
                              </div>
                              <ul>
                                  {% if is_granted('ROLE_ADMIN')  %}
                                      <a href="{{ path('proyecto_new') }}" class="btn green"><i class="fa fa-plus"></i>
                                          Insertar un nuevo proyecto
                                      </a>

                                  {% endif %}


                              </ul>

                          </div>

                      </div>
                  </div>
              </div>
          </div>
          <!-- End: life time stats -->



      </div>

      <div class="container">



          <div class="clearfix"></div>


      </div>
      <br>  </br>
      <br>  </br>
      <br>  </br>
      <br>  </br>


